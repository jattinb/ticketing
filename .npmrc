# Use the default npm registry
registry=https://registry.npmjs.org/

# Save exact versions of dependencies
save-exact=true

# Enable the use of package-lock.json
package-lock=true

# Set a custom cache directory
cache=${HOME}/.npm-cache

# Configure the prefix for global installations
prefix=${HOME}/.npm-global

# Custom scripts (example)
# preinstall=echo 'Running preinstall script...'

# Ensure specific Node.js version
engine-strict=true
